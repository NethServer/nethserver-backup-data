#
# 80backup_mount_point
#

{
    $OUT .= "[/mnt/backup-backup-data]\n";
    $OUT .= "ask_auth\t0\n";

    use esmith::ConfigDB;
    my $db = esmith::ConfigDB->open_ro('backups') || return '';
    foreach ($db->get_all()) {
        my $vfstype = $_->prop('VFSType') || next;
        if ($vfstype eq 'webdav') {
            $OUT .= "[/mnt/backup-".$_->key."]\n";
            $OUT .= "ask_auth\t0\n\n";
        }
    }
}

